import React, { useState } from "react";

const Sidebar = ({ page, setPage }) => (
  <aside className="w-64 bg-pink-100 p-4 hidden md:block">
    <h2 className="text-xl font-bold text-pink-700 mb-6">üç∞ DoceDeRenda</h2>
    {["Dashboard", "Pedidos", "Clientes", "Produtos"].map((p) => (
      <button key={p} onClick={() => setPage(p)} className={`block w-full text-left px-3 py-2 rounded mb-2 ${page === p ? "bg-pink-300" : "hover:bg-pink-200"}`}>
        {p}
      </button>
    ))}
  </aside>
);

const OrdersPage = ({ orders, openOrder }) => (
  <div>
    <div className="flex justify-between items-center mb-4">
      <h1 className="text-2xl font-bold text-pink-700">Pedidos</h1>
      <button onClick={() => openOrder(undefined)} className="bg-pink-600 text-white px-4 py-2 rounded-xl">+ Novo Pedido</button>
    </div>
    <div className="bg-white rounded-2xl shadow overflow-x-auto">
      <table className="w-full text-sm text-center">
        <thead className="bg-pink-100 text-pink-700">
          <tr>
            <th>Cliente</th>
            <th>Entrega</th>
            <th>Status</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          {orders.map((o) => (
            <tr key={o.id} className="border-t hover:bg-pink-50 cursor-pointer" onClick={() => openOrder(o.id)}>
              <td>{o.customerName}</td>
              <td>{o.deliveryDate}</td>
              <td>{o.status}</td>
              <td>R$ {o.total.toFixed(2)}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
);

export default function App() {
  const [page, setPage] = useState("Pedidos");
  const [editingOrderId, setEditingOrderId] = useState(null);

  const orders = [{ id: 1, customerName: "Maria", deliveryDate: "2026-01-15", status: "OrderPlaced", total: 120 }];

  return (
    <div className="flex min-h-screen bg-pink-50">
      <Sidebar page={page} setPage={setPage} />
      <main className="flex-1 p-6">
        {page === "Pedidos" && <OrdersPage orders={orders} openOrder={(id) => { setEditingOrderId(id ?? null); setPage("Pedido"); }} />}
        <div className="mt-6 text-center text-gray-600">P√°gina: {page}</div>
      </main>
    </div>
  );
}
